<!DOCTYPE html>
<html>
  <head>
    <title>LivroMania</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class='header'>
      <%= link_to '', root_path, :class=>'logo' %>

      <div class='boxUser'>
            <%= render 'layouts/header' %>
      </div>

      <div class='search'>
        <%= form_tag "/find" do %>
          <%= text_field_tag :search_string, value='', :class => 'fieldSearch' %>
          <%= submit_tag "Ok", :class => 'btn-primary btnBusca' %>
         <% end %>
      </div>

    </div>
    <div class='corpo'>
      <% if notice %><p class="alert alert-success"><%= notice %></p><% end %>
      <% if alert %><p class='alert alert-error'><%= alert %></p><% end %>

      <%= yield %>

    </div>
  </body>
</html>
