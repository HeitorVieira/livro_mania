<% @messages.each do |other_person, messages| %>
  <b><%= other_person.name %></b><br/>
  <% messages.each do |message| %>
    <%= message.sender.name %>: <%= message.body %><br/>
  <% end %>
  
  <%= form_for(@message) do |f| %>
    <div><%= f.text_area :body %></div>
    <div><%= f.hidden_field :sender_id, :value => current_user.id %></div>
    <div><%= f.hidden_field :receiver_id, :value => other_person.id %></div>
    <div><%= f.submit "Enviar" %></div>
  <% end %>
  
  <hr/>
<% end %>
